@using Microsoft.AspNetCore.Identity
@using HealthentiaVitalsDashboard.Models
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="form-inline">
        <span class="text-dark me-2">Hello @User.Identity?.Name!</span>
        <button type="submit" class="btn btn-link text-dark">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a class="btn btn-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
}