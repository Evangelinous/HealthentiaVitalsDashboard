@model List<HealthentiaVitalsDashboard.Models.Patient>

<h2 class="mb-4 text-primary fw-bold">Patients</h2>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var p in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title mb-2 text-dark fw-semibold">@p.Name</h5>
                    <p class="card-text mb-1"><strong>Age:</strong> @p.Age</p>
                    <p class="card-text"><strong>Room:</strong> @p.RoomNumber</p>
                </div>
                <div class="card-footer bg-white border-0 text-end">
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-primary btn-sm">
                        View Vitals
                    </a>
                </div>
            </div>
        </div>
    }
</div>